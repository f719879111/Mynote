<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle">
	
	<!-- 这里是Linearlayout布局的背景颜色 -->
    <!-- <solid android:color="#9ad4ef" /> -->

    <!-- 这里是设置边框线的粗细和颜色 -->
    <stroke
        android:width="0.8dp"
        android:color="#00a5e2" />

    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" />
    
	<!-- 角的话，里边有参数可以单独设置 -->
    <corners android:radius="10dp" />

</shape>