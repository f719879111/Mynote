<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- 指定内部填充颜色 -->
    <solid android:color="#FFFFFF" />
    <!-- 描边属性定义描边的宽度及其颜色 -->
    <stroke android:color="#D1D1D1" android:width="1.5dp" />
    <!-- 定义圆角 -->
    <corners android:radius="8dp"/>
    <!-- 设置内边距 -->
    <padding android:left="10dp" android:right="10dp" android:top="2dp" android:bottom="2dp"/>

</shape>
